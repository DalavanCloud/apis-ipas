@import nib

greydark = #313942
greydarker = #19202A
greydarkest = #131922

body
  background-color greydark
  color white
  text-align center

a
  color white
  &:hover
    color white
    text-decoration none

header
  text-align left
  padding-top 25px
  height 10%
  .sponsor
    opacity 0.3
    height 147px
    margin-left 30px

.container-fluid
  padding 0
  width 100%
  height 100vh

#landing
  height 35vh
  img
    height 100%

#podcasts-container
  position absolute
  height 55vh
  width 100%

#guests-container
  position absolute
  width 100%
  height calc(100% - 120px)
  bottom 0
  .guest
    display inline-block
    height 100%
    width 25%
    letter-spacing 1px
    .podcast-info
      width 100%
      .podcast-episode
        font-size 1.5em
        .episode
          font-weight 100
          opacity 0.5
        .twitter
          font-size 110%
          margin-left 7px
      .company
        font-size 20px
        font-weight 100
        margin 10px 0 20px 0
    .guest-image
      width 100%
      height calc(100% - 97px)
      background-size contain
      transition background 0.2s
      &:hover
        cursor hand
        cursor pointer
        background-size contain

#soundcloud
  display none
  background greydarker
  padding 0 60px
  height 120px
  width 100%
  position absolute
  bottom 0
  #episode-info
    background greydarkest
    float left
    width 300px
    height 100%
    padding 12px 25px
    text-align left
    p
      margin 2px
      letter-spacing 1px
      font-size 14px
      &.summary
        font-size 120%
        .episode
          opacity 0.5
          font-weight 100
      &.company
        font-size 105%
        margin-left 40px
      &.duration,
      &.ipa
        font-weight 200
        opacity 0.5
        margin-left 16px
        .fa
          margin-right 10px
          opacity 0.7
  #player
    overflow hidden
    margin 0
    iframe
      width 100%
      height 115px

