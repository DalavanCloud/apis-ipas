@import nib

greydark = #313942
greydarker = #19202A
greydarkest = #131922

body
  font-family "Roboto", "Arial"
  background-color greydark
  color white
  text-align center
  min-height 100vh

a
  color white
  &:hover
    color white
    text-decoration none

header,
#header
  text-align left
  padding-top 25px
  height 10vh
  .sponsor
    opacity 0.3
    height 147px
    margin-left 30px

#landing
  height 35vh
  background: url("../img/logo.png") no-repeat center

#main-content
  position fixed
  height 55vh
  min-height 200px
  width 100%
  bottom 0
  bottom -120px
  #all-guests-container
    height calc(100% - 120px)
    .guest-container
      display inline-block
      width 25%
      height 100%
      &:hover
        cursor pointer
        cursor hand
      .summary
        height 70px
        h2.overview
          font-size 22px
          margin-top 0
          .episode
            opacity 0.5
            font-weight 100
            margin-right 3px
        .company
          font-size 17px
          font-weight 300
      .image
        height calc(100% - 70px)
        background-size contain
        transition background 0.5s
        background url("../img/guests/001-alex-off.png") no-repeat center
      &.active
        .image
          background url("../img/guests/001-alex-on.png") no-repeat center
          background-size contain
      &.inactive
        opacity 0.3
  #soundcloud-container
    height 120px
    .soundcloud
      height 100%
      width 100%
      background #19202A
      display none
      padding 0 100px
      .episode-summary
        width 300px
        height 100%
        text-align left
        padding-left 10px
        background #131922
        display inline-block
        vertical-align top
        float left
        font-size 14px
        p
          margin-bottom 4px
        .overview
          margin-top 15px
          font-size 16px
          .episode
            font-weight 100
          .guest-name
            font-weight 500
        .company
          margin-left 45px
        .episode,
        .duration,
        .ipa
          opacity 0.5
        .episode,
        .fa
          font-size 16px
          float left
          width 35px
          text-align right
          margin-right 10px
      .soundcloud-player
        overflow hidden
        iframe
          width 100%
      &.active
        display block

